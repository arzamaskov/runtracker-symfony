# Шаблон файла окружения для production
###> symfony/framework-bundle ###
APP_ENV=prod
APP_SECRET=
# IMPORTANT: Сгенерируйте случайную строку длиной 32+ символа
# Используйте: openssl rand -hex 32

DEFAULT_URI=https://runtracker.ru
# URL приложения для генерации ссылок в CLI командах
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
DB_NAME=runtracker
DB_USER=app
DB_PASSWORD=
# IMPORTANT: Установите надежный пароль для PostgreSQL
###< doctrine/doctrine-bundle ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=
# IMPORTANT: Сгенерируйте JWT ключи:
# mkdir -p config/jwt
# openssl genpkey -out config/jwt/private.pem -aes256 -algorithm rsa -pkeyopt rsa_keygen_bits:4096
# openssl pkey -in config/jwt/private.pem -out config/jwt/public.pem -pubout
# Введите passphrase и сохраните его в JWT_PASSPHRASE
###< lexik/jwt-authentication-bundle ###

###> Redis ###
# Redis используется для кеширования и сессий
REDIS_URL=redis://redis:6379
###< Redis ###

###> Messenger ###
# Конфигурация очереди сообщений
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< Messenger ###
